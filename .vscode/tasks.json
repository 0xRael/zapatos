{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar GTK con pkg-config",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "gcc $(pkg-config --cflags gtk+-3.0) main2.c $(pkg-config --libs gtk+-3.0) -o app"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
